{
  "name": "jiezi-blog",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:api && tsc -b && vite build",
    "build:api": "node build-api.cjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "frontend:start": "node frontend-server.cjs",
    "electron": "electron dist-electron/main.cjs",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron dist-electron/main.cjs\"",
    "electron:build": "npm run build && electron-builder",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@uiw/react-md-editor": "^4.0.4",
    "better-sqlite3": "^12.2.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "http-proxy-middleware": "^3.0.5",
    "lucide-react": "^0.511.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.3.0",
    "remark-gfm": "^4.0.0",
    "sonner": "^2.0.7",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.0.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vercel/node": "^5.3.6",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-dev-locator": "^1.0.0",
    "concurrently": "^9.2.0",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.5",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-trae-solo-badge": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.jiezi.blog",
    "productName": "芥子博客",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ]
  }
}
